{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "package",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "package"
    ],
    "exclude": [
        "node_modules"
    ]
}
